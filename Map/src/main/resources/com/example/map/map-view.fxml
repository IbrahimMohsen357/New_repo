<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="500" prefWidth="800" style="-fx-background-color: #0a1f44;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.map.MapController">
    <!-- الخريطة -->
    <ImageView fx:id="worldMap" fitWidth="700" layoutX="50" layoutY="30" opacity="0.3" preserveRatio="true" />

    <!-- حاوية الـ Pins -->
    <Pane fx:id="pinContainer" layoutX="50" layoutY="30" prefHeight="400" prefWidth="700" />

    <!-- أزرار الزووم -->
    <Button fx:id="zoomInBtn" layoutX="720" layoutY="30" style="-fx-font-size: 16px; -fx-pref-width: 30px; -fx-pref-height: 30px;" text="+" />
    <Button fx:id="zoomOutBtn" layoutX="760" layoutY="30" style="-fx-font-size: 16px; -fx-pref-width: 30px; -fx-pref-height: 30px;" text="-" />
</AnchorPane>
